<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context="com.milarian.milarian.Login"
    android:background="#dbdbdb">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:background="#c20c0c"
        android:id="@+id/frameLayout"
        android:elevation="10dp"
        android:fadeScrollbars="false">

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:text="Password"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:elevation="10dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/username"
            android:text="Email or username"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="30dp"
            android:elevation="10dp"
            android:editable="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="REGISTER"
            android:id="@+id/register"
            android:layout_gravity="right|bottom"
            android:background="#8A0000"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:onClick="register_button"/>

        <Button
            android:id="@+id/signIn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#8A0000"
            android:text="Sign in"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:elevation="10dp"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:onClick="signIn_button"
            />
    </FrameLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:layout_above="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="@mipmap/launcher_milarian_rounded"
        android:adjustViewBounds="true"
        android:fadeScrollbars="false"
        android:duplicateParentState="false" />

</RelativeLayout>
