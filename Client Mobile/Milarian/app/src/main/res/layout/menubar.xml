<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="com.milarian.milarian.MainActivity"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:elevation="25dp"
    android:fadeScrollbars="true">

        <ImageButton
            android:id="@+id/action_setting"
            android:src="@drawable/ic_action_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:onClick="menu_button"/>
        <ImageButton
            android:id="@+id/action_accepted"
            android:src="@drawable/ic_action_accepted"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:onClick="accept_button"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_profile"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:onClick="profile_button"/>
        />
    </LinearLayout>

